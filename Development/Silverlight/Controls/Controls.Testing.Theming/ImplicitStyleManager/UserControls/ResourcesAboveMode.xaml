<UserControl x:Class="Microsoft.Windows.Controls.Testing.ResourcesAboveMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:theming="clr-namespace:Microsoft.Windows.Controls.Theming;assembly=Microsoft.Windows.Controls.Theming"
    Width="400" Height="300">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Red" />
        </Style>
    </UserControl.Resources>
    <Grid Background="White" theming:ImplicitStyleManager.ApplyMode="Auto">
        <Button Content="Button" x:Name="btn"/>
    </Grid>
</UserControl>