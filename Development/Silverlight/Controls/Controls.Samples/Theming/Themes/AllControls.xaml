                    <Path.Fill>
                        <LinearGradientBrush StartPoint="-7.80076e-010,0.495068" EndPoint="1.04155,0.495068">
                            <GradientStop Color="#FF000000" Offset="0" />
                            <GradientStop Color="#FFFFFFFF" Offset="1" />
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
            </Canvas>
        </Border>
    </Grid>
</UserControl>