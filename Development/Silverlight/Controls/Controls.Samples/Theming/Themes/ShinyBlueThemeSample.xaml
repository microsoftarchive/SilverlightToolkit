<UserControl 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:shinyBlue="clr-namespace:Microsoft.Windows.Controls.Theming;assembly=Microsoft.Windows.Controls.Theming.ShinyBlue"
  xmlns:samples="clr-namespace:Microsoft.Windows.Controls.Samples"
  x:Class="Microsoft.Windows.Controls.Samples.ShinyBlueThemeSample">
        <StackPanel>
        <ContentControl Content="ExpressionDarkTheme" Style="{StaticResource Header}" />
        <shinyBlue:ShinyBlueTheme HorizontalContentAlignment="Stretch">
            <samples:AllControls/>
        </shinyBlue:ShinyBlueTheme>        
    </StackPanel>
</UserControl>
