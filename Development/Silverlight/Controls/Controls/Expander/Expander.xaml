                                            </Grid.ColumnDefinitions>
                                            <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                                <Ellipse x:Name="circle" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Width="19" Height="19"
                                                         Fill="{StaticResource ExpanderArrowFill}" Stroke="DarkGray"/>
