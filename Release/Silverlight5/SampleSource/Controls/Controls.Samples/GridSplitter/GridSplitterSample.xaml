                  Grid.Column="0"
                  Grid.ColumnSpan="3"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ShowsPreview="True" />
                <controls:GridSplitter
                  Grid.Row="0"
                  Grid.Column="1"
                  Grid.RowSpan="3"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ShowsPreview="True" />
            </Grid>
        </Grid>
