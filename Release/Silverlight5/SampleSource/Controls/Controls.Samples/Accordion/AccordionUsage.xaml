                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" /&gt;
                &lt;/Grid&gt;
              &lt;/ControlTemplate&gt;
            &lt;/Setter.Value&gt;
          &lt;/Setter&gt;
        &lt;/Style&gt;
      &lt;/layoutToolkit:Accordion.ItemContainerStyle&gt;
    &lt;/layoutToolkit:Accordion&gt;
