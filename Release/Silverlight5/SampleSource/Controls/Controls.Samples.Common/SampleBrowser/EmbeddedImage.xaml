<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  
  xmlns:samplesCommon="clr-namespace:System.Windows.Controls.Samples;assembly=System.Windows.Controls.Samples.Common"
  
  >

    <!-- common:EmbeddedImage -->
    <Style TargetType="samplesCommon:EmbeddedImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="samplesCommon:EmbeddedImage">
                    <Grid x:Name="LayoutRoot">
                        <Image x:Name="Image" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>